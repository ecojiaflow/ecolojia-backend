datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ConfidenceColor {
  green
  yellow
  red
}

enum VerifiedStatus {
  verified
  manual_review
}

model Product {
  id               String   @id @default(cuid())
  title            String
  description      String
  slug             String   @unique
  brand            String?
  category         String
  tags             String[]
  images           String[]
  zones_dispo      String[]
  prices           Json
  affiliate_url    String?
  eco_score        Float
  ai_confidence    Float
  confidence_pct   Int
  confidence_color ConfidenceColor
  verified_status  VerifiedStatus
  resume_fr        String
  resume_en        String
  enriched_at      DateTime
  created_at       DateTime @default(now())

  @@map("product") // ðŸ”§ force le nom exact en base = "product"
}
